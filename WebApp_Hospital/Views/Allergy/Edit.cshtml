@model WebApp_Hospital.Models.Allergy

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Allergy</h4>
<hr />
<div class="row">
    <div class="col-md-12  align-content-center text-center justify-content-center">
        <div class="col-8 align-content-center m-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Fk_patient_identification_card" class="control-label">Patient Identification</label>
                    <input asp-for="Fk_patient_identification_card" class="form-control" readonly />
                    <span asp-validation-for="Fk_patient_identification_card" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patient_name" class="control-label">Patient Name</label>
                    <input asp-for="Patient_name" class="form-control" readonly />
                    <span asp-validation-for="Patient_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Allergy_name" class="control-label">Allergy Name</label>
                    <input asp-for="Allergy_name" class="form-control" readonly />
                    <span asp-validation-for="Allergy_name" class="text-danger"></span>
                </div>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <td>@Html.DisplayFor(model => model.Diagnosis_date_time)</td>
                    </tr>
                    <tr>
                        <th>Medicine</th>
                        <td>@Html.DisplayFor(model => model.Medicine)</td>
                    </tr>
                </table>
                <input type="hidden" asp-for="Diagnosis_date_time" readonly />
                <div class="form-group">
                    <h5>Date of diagnosis</h5>
                    <div class="row justify-content-around">
                        <div class="col-lg-4 form-group">
                            <label asp-for="Year" class="control-label"></label>
                            <select class="form-control" asp-for="Year">
                                <option>Year</option>
                                <option>2021</option>
                                <option>2022</option>
                                <option>2023</option>
                                <option>2024</option>
                                <option>2025</option>
                                <option>2026</option>
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="col-lg-4 form-group">
                            <label asp-for="Month" class="control-label"></label>
                            <select class="form-control" asp-for="Month">
                                <option>Month</option>
                                <option>01</option>
                                <option>02</option>
                                <option>03</option>
                                <option>04</option>
                                <option>05</option>
                                <option>06</option>
                                <option>07</option>
                                <option>08</option>
                                <option>09</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                            </select>
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>

                        <div class="col-lg-4 form-group">
                            <label asp-for="Day" class="control-label"></label>
                            <select class="form-control" asp-for="Day">
                                <option>Day</option>
                                <option>01</option>
                                <option>02</option>
                                <option>03</option>
                                <option>04</option>
                                <option>05</option>
                                <option>06</option>
                                <option>07</option>
                                <option>08</option>
                                <option>09</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                                <option>13</option>
                                <option>14</option>
                                <option>15</option>
                                <option>16</option>
                                <option>17</option>
                                <option>18</option>
                                <option>19</option>
                                <option>20</option>
                                <option>21</option>
                                <option>22</option>
                                <option>23</option>
                                <option>24</option>
                                <option>25</option>
                                <option>26</option>
                                <option>27</option>
                                <option>28</option>
                                <option>29</option>
                                <option>30</option>
                                <option>31</option>
                            </select>
                            <span asp-validation-for="Day" class="text-danger"></span>
                        </div>
                        <span class="text-danger">@ViewBag.ErrorDates</span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Medicine" class="control-label">Medicine</label>
                    <input asp-for="Medicine" class="form-control" />
                    <span asp-validation-for="Medicine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.Fk_patient_identification_card">Back to List</a>
</div>

